               sh 'cd /'
               sh 'docker build -t testbuid .'
                  }
                echo 'Buid OK'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Push') {
            steps {
                echo 'Deploying....'
            }
        }    
    }
}
