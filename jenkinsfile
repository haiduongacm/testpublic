pipeline {
    agent any
    environment {
        DOCKER_TAG="${GIT_BRANCH.tokenize('/').pop()}-${GIT_COMMIT.substring(0,7)}"        
        DOCKER_IMAGE="nginxbyDuong"
	DOCKER_REGISTRY="13.229.250.134"
        DOCKER_USERNAME = credentials("docker-user")
        DOCKER_PASSWORD = credentials("docker-password")
	DOCKERHUB_CREDENTIALS=credentials('todockerhub')
    }
    stages {
        stage('Build') {            
            steps {
                
            }
        }

        stage('Unit test') {
            steps {
                
            }
        }

        stage('Code coverage') {
            steps {
               
            }
        }

        stage('SonarQube analysis') {
            environment {
                SCANNER_HOME = tool 'sonarqube-scanner'
            }
            steps {
               
                }
            }
        }

        stage('Docker build') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}"
                sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:latest"
            }
        }

        stage('Docker push') {
            steps {
                sh "docker login --username ${DOCKER_USERNAME} --password ${DOCKER_PASSWORD} ${DOCKER_REGISTRY}"
                sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}"
                sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:latest"
                sh "docker image rm ${DOCKER_IMAGE}:${DOCKER_TAG}"
            }
        }
        
        stage('Docker deploy with ansible'){
            steps{
                
                
            }
        }
    }

