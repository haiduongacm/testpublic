pipeline {
    agent any
           environment {
		       DOCKERHUB_CREDENTIALS=credentials('todockerhub')
	       }
    stages {
        stage('Build') {
            steps {
                sshagent(credentials:['docker-01']){
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 uptime "whoami" '
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 cd /'
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker build -t testbuid .'
                  }
                echo 'Buid OK'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Push') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh 'docker push haiduongmilan/abc:latest'
                sh 'docker logout'
            }
        }    
    }
}
