pipeline {
    agent any
           environment {
		       DOCKERHUB_CREDENTIALS=credentials('todockerhub')
	       }
    stages {
        stage('Build') {
            steps {
               sshagent(credentials:['docker-01']){
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 uptime "whoami" '
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 cd /'
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker build -t testbuild .'
                  }
                echo 'Buid OK'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
        stage('Push') {
            steps {
	    	sshagent(credentials:['docker-01']){
                sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 echo $DOCKERHUB_CREDENTIALS_PSW'                
		sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker login -u haiduongmilan -p Kenko@123'
		sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker push testbuild:latest'
                sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker logout'
		}
            }
        }    
    }
}
