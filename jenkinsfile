pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sshagent(credentials:['docker-01']){
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 uptime "whoami" && cd / && docker build -t testbuid .'                              
                  }
                echo 'Buid OK'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Push') {
            steps {
                echo 'Deploying....'
            }
        }    
    }
}
