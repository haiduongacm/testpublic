pipeline {
    agent any
           environment {
		       DOCKERHUB_CREDENTIALS=credentials('todockerhub')
	       }
    stages {
        stage('BUILD & PUSH') {
            steps {
               sshagent(credentials:['docker-01']){
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 uptime "whoami" '
               sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 cd /'
	       sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker build -t haiduongmilan/testbuild:v1 .'    
	       sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
	       sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker push haiduongmilan/testbuild:v1'
	       sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker logout'
	       sh 'ssh  -o StrictHostKeyChecking=no  ec2-user@18.139.0.248 docker image rm haiduongmilan/testbuild:v1 '
                  }
                echo 'OK'	        
            }
        }
      
        stage('TEST') {
            steps {
                echo 'OK....'
            }
        }
	stage('PUSH NOTI') {
            steps {
                echo 'OK....'
            }
        }     
    }
}
